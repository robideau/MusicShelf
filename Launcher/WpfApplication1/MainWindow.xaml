<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MusicShelf" Height="350" Width="525">
    <GroupBox Header="MusicShelf setup"
              VerticalAlignment="Top"
              HorizontalAlignment="Left" Height="280" Width="490"
              Margin="10, 10, 10, 10">
        
        <StackPanel>
            <Button Content="Point to music library directory" RenderTransformOrigin="0.501,4.2" Height="39" Margin="10" Name="FileBrowseButton" Click="fileBrowseButton_Click"/>
            <Button Content="Point to directory containing MusicShelf.exe" Height="39" Margin="10, 40" Name="ExeFinderButton" Click="ExeFinderButton_Click"/>
            <Button Content="Run MusicShelf" Height="39" Margin="10, 20" Name="StartButton" Click="StartButton_Click" VerticalAlignment="Bottom"/>
        </StackPanel>
        
    </GroupBox>
</Window>
